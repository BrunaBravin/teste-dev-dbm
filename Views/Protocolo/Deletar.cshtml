@model TesteDevDbm.Models.Protocolo

@{
    ViewData["Title"] = "Deletar Protocolo";
}

<h1 style="color: red;">Deseja realmente deletar esse protocolo? Essa operação é irreversível</h1>

<div>
    <dl class="row">
        <input type="hidden" asp-for="IdProtocolo" />
        <dt class="col-sm-2">
            Titulo
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Titulo)
        </dt>
        <dt class="col-sm-2">
            Descricao
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Descricao)
        </dt>
        <dt class="col-sm-2">
            Nome Cliente
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Cliente.Nome)
        </dt>
        <dt class="col-sm-2">
            Status Protocolo
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.ProtocoloStatus.NomeStatus)
        </dt>
        <dt class="col-sm-2">
            Data Abertura
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.DataAbertura)
        </dt>
        <dt class="col-sm-2">
            Data Fechamento
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.DataFechamento)
        </dt>
    </dl>
</div>

<form asp-action="Deletar">
    <input type="hidden" asp-for="IdProtocolo" /> 
    <input type="submit" value="Deletar" class="btn btn-danger" />
</form>

<br>
<a asp-action="Index">Voltar</a>