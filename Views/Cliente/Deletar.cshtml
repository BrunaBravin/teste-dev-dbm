@model TesteDevDbm.Models.Cliente 

@{
    ViewData["Title"] = "Deletar cliente";
}

<h1 style="color: red;">Deseja realmente deletar esse cliente? Essa operação é irreversível</h1>

<div>
    <dl class="row">
        <input type="hidden" asp-for="IdCliente" />
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Nome)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Nome)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Email)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Email)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Telefone)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Telefone)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Endereco)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Endereco)
        </dt>
    </dl>
</div>

<form asp-action="Deletar">
    <input type="hidden" asp-for="IdCliente" /> 
    <input type="submit" value="Deletar" class="btn btn-danger" />
</form>

<br>
<a asp-action="Index">Voltar</a>