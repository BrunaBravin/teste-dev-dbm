@model TesteDevDbm.Models.StatusProtocolo

@{
    ViewData["Title"] = "Deletar status de protocolo";
}

<h1 style="color: red;">Deseja realmente deletar esse status? Essa operação é irreversível</h1>

<div>
    <dl class="row">
        <input type="hidden" asp-for="IdStatus" />
        <dt class="col-sm-2">
            Nome
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.NomeStatus)
        </dt>
    </dl>
</div>

<form asp-action="Deletar">
    <input type="hidden" asp-for="IdStatus" /> 
    <input type="submit" value="Deletar" class="btn btn-danger" />
</form>

<br>
<a asp-action="Index">Voltar</a>