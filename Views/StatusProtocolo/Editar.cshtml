@model TesteDevDbm.Models.StatusProtocolo

@{
    ViewData["Title"] = "Editar status de protocolo";
}

<h1>Editar Status</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <input type="hidden" asp-for="IdStatus" />

            <div class="form-group">
                <label asp-for="NomeStatus" class="control-label">Nome Status</label>
                <input asp-for="NomeStatus" class="form-control" />
                <span asp-validation-for="NomeStatus" class="text-danger"></span>
            </div>

            <br>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<br>
<div>
    <a asp-action="Index">Voltar</a>
</div>